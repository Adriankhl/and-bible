<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="?android:colorBackground"
	android:minHeight="@dimen/bookmark_label_style_dialog_min_height"
	android:padding="10dip"
	>

	<EditText
		android:id="@+id/labelName"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="@string/label_name_prompt"
		android:textAppearance="?android:attr/textAppearanceMedium"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/labelColorTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:text="@string/label_color"
		android:textAppearance="?android:attr/textAppearanceSmall"
		app:layout_constraintTop_toBottomOf="@+id/labelName"
		app:layout_constraintStart_toStartOf="parent"
		tools:layout_editor_absoluteX="10dp" />

	<com.jaredrummler.android.colorpicker.ColorPickerView
		android:id="@+id/colorPicker"
		app:layout_constraintTop_toBottomOf="@+id/labelColorTitle"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		/>

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingTop="15dp"
		android:text="@string/label_color_example"
		android:textAppearance="?android:attr/textAppearanceSmall"
		tools:layout_editor_absoluteX="10dp"
		tools:layout_editor_absoluteY="10dp"
		app:layout_constraintTop_toBottomOf="@id/colorPicker"
		app:layout_constraintStart_toStartOf="parent"
		/>
	<TextView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:id="@+id/labelColorExample"
		app:layout_constraintTop_toBottomOf="@id/textView"
		app:layout_constraintBottom_toBottomOf="parent"
		/>

</androidx.constraintlayout.widget.ConstraintLayout>
